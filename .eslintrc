{
    "env": {
        "browser": true,
        "commonjs": true,
        "es6": true,
        "node": true,
        "jest": true,
    },
    "extends": ["eslint:recommended"],
    "rules": {
        "brace-style": "error",
        "camelcase": "off",
        "comma-dangle": "off",
        "func-call-spacing": ["error", "never"],
        "keyword-spacing": ["error", { "before": true }],
        "space-infix-ops": ["error", { "int32Hint": false }],
        "object-curly-spacing": ["error", "always"],
        "eqeqeq": "warn",
        "indent": ["error", 4, { "SwitchCase": 1 }],
        "key-spacing": ["error", { "beforeColon": false }],
        "no-console": "off",
        "no-fallthrough": "warn",
        "prefer-const": "error",
        // "quotes": ["warn", "single"],
        "semi": ["warn", "never"],
        "react/prop-types": [0],
        "no-unused-vars": "warn",
    },
    "parserOptions": {
        "sourceType": "module",
        "ecmaVersion": "2018",
    },
}
