<div id="grind-modal-overlay" class="grind-modal-overlay"></div>
<div id="grind-modal" class="grind-modal" role="dialog" aria-modal="true" aria-labelledby="grind-modal-title">
    <div class="grind-modal__header">
        <h3 id="grind-modal-title">Choose your grind</h3>
        <button id="close-grind-modal" class="grind-modal__close" type="button"
            aria-label="Close grind selector">&times;</button>
    </div>
    <div class="grind-modal__options">
        <button type="button" class="grind-option-btn" data-grind="whole_beans">Whole Beans</button>
        <button type="button" class="grind-option-btn" data-grind="filter">Filter Grind</button>
        <button type="button" class="grind-option-btn" data-grind="espresso">Espresso Grind</button>
    </div>
</div>